

<table width="100%" style="padding:15px;">
    <tr height="300px">
        <td style="text-align:left" width="300px">
            <%= image_tag(@artist.profile_picture, {class: ""})%>
        </td>
        <td width="*" style="vertical-align:bottom;" height="300px">
        
            <table width = "100%"><tr><td>
            <span class='h4'> <%= @artist.name %> </span></td><td width="*" align = "right">

            <% if session[:user_id] > 0 %>
                <% if @artist.users.exists?(session[:user_id]) %>
                    <div class="liked" id="<%= @artist.id %>"></span>
                <% else %>
                    <div class="like"  id="<%= @artist.id %>"></span>
                <% end%>
            <% else %>
                <span class="signup-link">signup to like</span>
            <% end %> &nbsp;&nbsp;&nbsp;
            </td></tr></table>
            
            <p class="titles">
            <b>
            <%= @artist.address1 %><br /></b>
            <%= @artist.address2 %><br />
            <%= @artist.city %>, <%= @artist.state %><p></p><p class="titles">
            <%= @artist.phone %><br />
            <%= @artist.email %>
            </p>
        </td>
        
    </tr>
    <tr>
        <td colspan="2">    
        <hr color="#555555" height="1px">
            <p class="titles" style="font-size:20px; font-weight:bold">Artist Portfolio</p><br>
            <% @images.each do |image| %>
                <%= image_tag(image.path + image.name, {class: "medium", id: image.id}) %>
            <% end %>
        </td>
    </tr>
</table>
    





