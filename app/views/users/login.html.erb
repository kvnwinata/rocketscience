            <div class="signup-form">

              <%= form_for(@new_user) do |f| %>
              <!---<div class='error_message'><%= f.error_messages %></div>-->
              <div class='signup-fields'>

                  <%= f.label :email, "Email*" %>
                  <%= f.text_field :email %>
                  <br>
                  <%= f.label :password, "Password*" %>
                  <%= f.password_field :password %>
                  <br>
                  <%= f.label :password_confirmation, "Retype password*" %>
                  <%= f.password_field :password_confirmation %>
                  <br>
                  <%= f.submit "SIGNUP"%>
              </div>
              <% end %>
          </div>



          <h2>browse</h2>
          <p class = "loginCaption">dont want to signup? browse as guest.</p>
          <p class = "loginSubs">your preferences will not be saved.</p>

