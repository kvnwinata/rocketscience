


<div id="centered" align="center"> 

    <table width = "1050px" border="0" style="border-collapse: collapse" cellpadding="0" cellspacing="0" height="423" >
        <tr><td colspan="2">
            <h1>Your first step into the tattoo world.</h1>
        </td></tr>

        <tr><td width = 60%></td><td width = 40%>
            <%= image_tag("shared/logo_white.png", {:class=>"put classes here", :id=>'3'}) %> 

